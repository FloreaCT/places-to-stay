    <title>Places to stay</title>
</head>

<body>

    <%- include('partials/navbarUser.ejs') %>

        <div class="modal fade login" id="creditCard">
            <div class="modal-dialog login animated">
                <div id="card-success" class="hidden">
                    <i class="fa fa-check"></i>
                    <p>Payment Successful!</p>
                </div>
                <div id="form-errors" class="hidden">
                    <i class="fa fa-exclamation-triangle"></i>
                    <p id="card-error">Card error</p>
                </div>
                <div class="modal-content">
                    <div id="form-container">
                        <div class="modal-header"><button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button></div>
                        <div id="card-front">
                            <div id="shadow"></div>

                            <div id="image-container">
                                <span id="amount">Your credit card will be debited: <strong>Â£99</strong></span>
                                <span id="card-image">  </span>
                            </div>
                            <!--- end card image container --->

                            <label for="card-number">
              Card Number
            </label>
                            <input type="text" id="card-number" placeholder="1234 5678 9101 1112" maxlength="16">
                            <div id="cardholder-container">
                                <label for="card-holder">Card Holder
            </label>
                                <input type="text" id="card-holder" placeholder="e.g. John Doe" />
                            </div>
                            <!--- end card holder container --->
                            <div id="exp-container">
                                <label for="card-exp">
                Expiration
              </label><br>
                                <input id="card-month" type="text" placeholder="MM" maxlength="2">
                                <input id="card-year" type="text" placeholder="YY" maxlength="2">
                            </div>
                            <div id="cvc-container">
                                <label for="card-cvc"> CVC/CVV</label>
                                <input id="card-cvc" placeholder="XXX-X" type="text" minlength="3" maxlength="4">
                                <p>Last 3 or 4 digits</p>
                            </div>
                            <!--- end CVC container --->
                            <!--- end exp container --->
                        </div>
                        <!--- end card front --->
                        <div id="card-back">
                            <div id="card-stripe">
                            </div>

                        </div>
                        <!--- end card back --->
                        <input type="text" id="card-token" />
                        <button type="button" id="card-btn" onclick="payment()">Submit</button>

                    </div>
                    <!--- end form container --->
                </div>
            </div>
        </div>
        <!--- end of modal container-->
        <div class="search">
            <form>
                <div class="form-group">
                    <label for="accommodationSearch"></label>
                    <input type="text" class="form-control" id="accommodationSearch" placeholder="Where would you like to stay?">
                </div>
                <div class="form-group">
                    <select class="form-control" id="typeOfAccommodation">
                    <option value="Any">Type of Accommodation (All)</option>
          </select>
                </div>
                <input type='button' id='ajaxButton' value='Search!' class="btn btn-primary" /></select>
                <br><br>

                <div class="alert alert-danger align-items-center" role="alert" id="alertMap" style="display: none">
                    No accommodation found!
                </div>
        </div>
        <div id="map" class="row-fluid search">
        </div>



        <br><br>


        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        <script type="text/javascript" src="https://js.stripe.com/v2/"></script>
        <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
        <script src="js/script.js"></script>
</body>
<script type="text/javascript">
    var map = L.map('map').setView([51.505, -0.09], 13);
    map.mapPane = 1;

    var tiles = L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19,
        attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
    }).addTo(map);

    map.on('popupopen', function() {
        console.log('popup');
        if (document.getElementById('ui-datepicker-div')) {
            console.log('has datepicker');
        }
    })

    var lc = L.control.locate({
        position: 'topleft',
        strings: {
            title: "Detect your current position!"
        }
    }).addTo(map);

    var popup = L.popup()

    var layerGroup = L.layerGroup().addTo(map);

    function onMapClick(e) {



        if (sessionStorage.getItem('access') === '1') {

            popup.setLatLng(e.latlng)
                .setContent('<div class="centerSmall"> <button type="button" class="btn btn-outline-primary"> <i class="fa-solid fa-plus"></i> Accommodation </button></div> ')
                .openOn(map);
        } else {
            popup
                .setLatLng(e.latlng)
                .setContent('Nothing here ')
                .openOn(map);
        }


    }


    map.on('click', onMapClick);
</script>

</html>