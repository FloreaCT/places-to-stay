<header role="banner">

    <nav class="navbar navbar-expand-lg navbar-dark bg-gray shadow-sm">
        <div class="logo">
            <a href="#">
                <!-- Logo Image -->
                <img src="images/logo.PNG" width="80" alt="" class="d-inline-block align-middle mr-2">
            </a>
        </div>
        <div class="centerSmall" id="navLogged" style="display: none">
            <div class="btn big-user" data-toggle="modal" id="loggedInAs">
            </div>
            <!-- <form method="post" action="/logout" class="formLogout"> -->
            <button class="btn big-logout" type="submit" value="Logout" onclick="logout()">Logout</button>
            <!-- </form> -->

        </div>


        <div class="container" id="navNotLogged" style="display: block">
            <div class="row">
                <div class="centerSmall">
                    <a class="btn big-login" data-toggle="modal" href="javascript:void(0)" onclick="openLoginModal();">Log in</a>
                    <a class="btn big-register" data-toggle="modal" href="javascript:void(0)" onclick="openRegisterModal();">Register</a>
                </div>
            </div>


            <div class="modal fade login" id="loginModal">
                <div class="modal-dialog login animated">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Login with</h4>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="box">
                                <div class="content">
                                    <div class="social">
                                        <a class="circle github" href="#">
                                            <i class="fa fa-github fa-fw"></i>
                                        </a>
                                        <a id="google_login" class="circle google" href="#">
                                            <i class="fa fa-google-plus fa-fw"></i>
                                        </a>
                                        <a id="facebook_login" class="circle facebook" href="#">
                                            <i class="fa fa-facebook fa-fw"></i>
                                        </a>
                                    </div>
                                    <div class="division">
                                        <div class="line l"></div>
                                        <span>or</span>
                                        <div class="line r"></div>
                                    </div>
                                    <div class="error"></div>
                                    <div class="form loginBox">

                                        <input id="loginUser" class="form-control" type="text" placeholder="Username" name="loginUser" required>
                                        <input id="loginPassword" class="form-control" type="password" placeholder="Password" name="loginPassword" required>
                                        <input class="btn btn-default btn-login" type="submit" value="Login" onclick="loginFunction()">
                                        <div class="alert-danger" id="loginError" style="display: none"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="box">
                                <div class="content registerBox" style="display:none;">
                                    <div class="form">

                                        <input id="username" class="form-control" type="text" placeholder="Username" name="username" required>
                                        <input id="password" class="form-control" type="password" placeholder="Password" name="password" required>
                                        <input id="password_confirmation" class="form-control" type="password" placeholder="Repeat Password" name="password_confirmation" required>
                                        <input class="btn btn-default btn-register" type="button" value="Create account" name="commit">

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <div class="forgot login-footer">
                                <span>Looking to
                                 <a href="javascript: showRegisterForm();">create an account</a>
                            ?</span>

                            </div>
                            <div class="forgot register-footer" style="display:none">
                                <span>Already have an account?</span>

                            </div>
                        </div>

                    </div>

                </div>

            </div>

        </div>
    </nav>

</header>

<div class="center">
    <form>
        <div class="form-group">
            <label for="accommodationSearch"><h1>Your next place to stay!</h1>Where would you like to stay:</label>
            <input type="text" class="form-control" id="accommodationSearch" placeholder="City or Area">
        </div>
        <div class="form-group">
            <label for="typeOfAccommodation">Type of accommodation</label>
            <select class="form-control" id="typeOfAccommodation">
            <option value="Any">Any</option>
  </select>
        </div>
        <input type='button' id='ajaxButton' value='Search!' class="btn btn-primary" /></select>
        <br><br>

        <div class="alert alert-danger align-items-center" role="alert" id="alertMap" style="display: none">
            No accommodation found!
        </div>
</div>
</form>